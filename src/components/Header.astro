---
import GitHubMark from "../assets/github-mark/mark/github-mark-white.svg";
import Linkeding from "../assets/LinkedIn_icon.png";
import { Image } from "astro:assets";
---

<header class="relative">
  <div
    class="absolute bg-stone-800 left-0 top-11 md:top-9 w-full h-[56px] md:h-[68px] -z-0"
  >
  </div>
  <section
    class="max-w-7xl m-auto py-2 px-4 md:p-6 flex items-center justify-between"
  >
    <article class="flex items-center gap-4">
      <img
        class="w-[96px] h-[68px] md:h-[96px] aspect-square object-cover bg-red-600 rounded-xl z-10 text-sm border-2 border-stone-700"
        src="https://avatars.githubusercontent.com/u/132897973?s=400&u=6c452a26d13295f2c6139e3c94c2bb7862772197&v=4"
        alt="Juan Antonio Valdivia"
      />
      <h1 class="text-sm md:text-2xl font-bold z-10">
        Juan <strong class="">Antonio Valdivia Camacho</strong>
      </h1>
    </article>
    <article class="z-10 flex gap-2">
      <a href="http://" title="Perfil GitHub">
        <Image src={GitHubMark} alt="Perfil GitHub" width="32" height="32" />
      </a>
      <a href="http://" title="Perfil Linkeding"
        ><Image
          src={Linkeding}
          alt="Perfil Linkeding"
          width="32"
          height="32"
        /></a
      >
    </article>
  </section>
</header>
